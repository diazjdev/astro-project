---
import Counter from "./counter";

const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"
---
<ul class="text-white flex gap-3 mt-5">
    <li class={currentPath === '' ? 'active' : ''}><a href="/">Home</a></li>
    <li class={currentPath ==="about" ? 'active' : ''}><a href="/about">About</a></li>
</ul>
<Counter client:visible transition:name="nav"  transition:persist/>


<style>
    .active{
        color:red
    }
